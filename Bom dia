
// função sem parametro e sem retorno
fun bomdia() {
    println("Bom dia")
}
//função com parametro e com retorno
fun bomdia1(msg:String){
    println ("Bom dia $msg")
}
//função com parametro e com retorno
fun bomdia2(msg:String):String{
    return "slk , bom dia $msg" 
}
//principal
fun main (){
    bomdia()
    var nome:String = "Senac"
    bomdia1(nome)
    println(bomdia2(nome))
}
